    h3 {
      font-weight: 500;
      letter-spacing: 0px;
      font-size: 1.7rem;
    }

    h1 {
      font-size: 3rem;
    }

    h2 {
      text-transform: uppercase;
    }

    h3 {
      text-transform: inherit;
    }

    p {
      font-size: 1.1rem;
    }

    .shopify-product-reviews {
      h1 {
        text-align: center;
      }
    }


    .ProductForm__AddToCart {
      padding: 14px 28px;
      width: 100%;
    }

    .shopify-payment-button__button {
      display: none;
    }

    .ProductForm__Variants {
      display: flex;
      justify-content: center;

      .ProductForm__QuantitySelector {
        background-color: $color-blue;
        color: $color-white;
        font-weight: 900;

        svg {
          stroke-width: 3.5px;
        }
      }
    }

    .Product__ActionList,
    .Product__QuickNav {
      display: none;
    }

    .Product__Tabs {
      .Collapsible {
        border-top: 1px solid $color-blue;

        &:last-child {
          border-bottom: 1px solid $color-blue;
        }

        .Collapsible__Button {
          font-size: 1.4rem;
          font-weight: 900;

          .Collapsible__Plus {
            &::before {
              height: 2px;
            }

            &::after {
              width: 2px;
            }
          }
        }
      }
    }
  }

  @media (min-width: $laptop-min) {
    .Product__Wrapper {
      display: grid;
      grid-template-columns: 2fr 1fr;
      grid-template-areas:
        "main sidebar"
        "main content"
        "reviews reviews";
      width: 100%;
      max-width: $max-width;

      .ProductMeta {
        text-align: center;
      }

      .Product__Gallery {
        grid-area: main;
      }

      .Product__InfoWrapper {
        grid-area: sidebar;
        position: relative;

        .Product__Info {
          position: static;
          padding-bottom: 1rem;
          padding-top: 50px;
        }
      }

      .Product__Aside {
        grid-area: content;
        min-height: 0px !important;

        .Product__Tabs {
          margin-top: 2rem;
        }
      }

      .shopify-product-reviews {
        grid-area: reviews;

        h1 {
          text-align: center;
        }
      }
    }
  }
}

