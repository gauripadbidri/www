.video-hero {
  .hero {
    position: relative;
    overflow: hidden;
  }

  .hero--main {
    max-height: calc(100vh - 65px);

    height: 150vw;

    .video {
      width: 100%;
      height: 100%;

      &::before {
        content: " ";
        background-color: $color-lightblue;
        opacity: .3;
        width: 100%;
        height: 100%;
        display: block;
      }
    }

    video {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      min-width: 100%;
      min-height: 100%;
      max-width: 66.66667vh;
      max-height: 150vw;
      opacity: 1;
      object-fit: cover;
      width: 100%;
      height: 100%;
      transition: opacity .4s;
    }

    .hero__content {
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      margin: auto;
      transform: translateY(-50%);
      text-align: center;
      box-sizing: border-box;
      padding-left: 20px;
      padding-right: 20px;
      transition: opacity .8s cubic-bezier(.39, .575, .565, 1) .2s;
      opacity: 1;

      div {
        margin-bottom: 1rem;
      }

      @media (min-width: 1600px) {
        top: 45%;
      }
    }
  }

  @media screen and (min-width: $laptop-min) {
    .hero--main {
      position: relative;
      overflow: hidden;
      height: 56.25vw;
      max-height: 1080px;
    }
  }
}

