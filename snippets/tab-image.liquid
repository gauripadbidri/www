  <div class="product_image_container">
    {%- for product in collections.all.products -%}
    {% if product.tags contains title %}
      <div class="kit-product-image" data-item="{{ product.handle }}">
        <img src="{{ product | img_url: '1000x' }}">
    </div>
    {%- endif -%}
    {%- endfor -%}
</div>


<script>

$(document).ready(function() {
  
$('.Collapsible__Button').click(function() {

$(".kit-product-image").hide();

console.log("working");
var id = $(this).attr('id');
console.log(id);

window.setTimeout(function() {

if ( $("#" + id).attr('aria-expanded') == "true" ) {
$(".kit-product-image[data-item=" + id + "]").show();
}
}
, 250);
});
});

</script>