<!--Justin W. @brandable-->
<section class="video-hero video-hero-{{ section.id }}"
         data-section-id="{{ section.id }}">
    <div class="hero hero--main">

          <video poster="{{ section.settings.image | img_url: '720x', format: 'jpg' }}" autoplay="true" class="js-switchVideoSrc is-playing" loop="true" muted="" playsinline="" src="{{ section.settings.video-link-url }}" webkit-playsinline=""></video>
            <div class="hero__content hero__content--white js-scroll js-scroll--fade is-in-view is-past-half is-past-quarter is-past-bottom">
        <div class="video-heading">
          <h1 class="SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h1" style="color: {{ section.settings.color_heading }};">{{ section.settings.slide-title }}</h1>
        </div>
        <div class="video-tagline">
          <h3 class="SectionHeader__SubHeading Heading u-h6" style="color: {{ section.settings.color_tagline }};">{{ section.settings.slide-tagline }}</h3>
        </div>
        <a class="ButtonGroup__Item Button Button--secondary" href="{{ section.settings.slide-link-url }}" style="background-color: {{ section.settings.color_button }}; color: {{ section.settings.color_link }};">{{ section.settings.slide-link-title }}</a>
      </div>
      </div>
</section>


{% comment %} <div class="Slideshow__ImageContainer {% if block.settings.apply_overlay %}Image--contrast{% endif %} {% unless section.settings.show_fullscreen %}AspectRatio AspectRatio--withFallback{% endunless %} hidden-phone" style="{% unless section.settings.show_fullscreen %}padding-bottom: {{ 100.0 | divided_by: block.settings.image.aspect_ratio }}%; --aspect-ratio: {{ block.settings.image.aspect_ratio }};{% endunless %} background-image: url({{ block.settings.image | img_url: '720x', format: 'jpg' }})"> {% endcomment %}



<style>

  .video-hero-{{ section.id }} .button {
        background: {{ section.settings.color_button }} !important;
        border-color: {{ section.settings.color_button }} !important;
        color: {{ section.settings.color_link }} !important;
  }

.video-hero .u-h1 {
font-size:{{ section.settings.heading_font_size_mobile }}rem;
padding-top: 5rem;
}
.video-hero .u-h6 {
font-size: {{ section.settings.subheading_font_size_mobile }}rem;
}

.video-hero .Button {
font-size: {{ section.settings.button_font_size_mobile }}rem;
}

@media (min-width: 1024px) {
  .video-hero .u-h1 {
font-size:{{ section.settings.heading_font_size }}rem;
}
  .video-hero .u-h6 {
font-size: {{ section.settings.subheading_font_size }}rem;
}
.video-hero .Button {
font-size: {{ section.settings.button_font_size }}rem;
}
}

</style>

{% schema %}
  {
    "name": "Video Hero",
	"class": "section--video-hero",
    "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "2000 x 1100px recommended"
        },
        {
          "type": "url",
          "id": "video-link-url",
          "label": "Local Video Link"
        },
        {
          "type": "text",
          "id": "slide-title",
          "label": "Heading",
          "default": "Video-Hero"
        },
        {
            "type": "range",
            "id": "heading_font_size",
            "min": 1,
            "max": 10,
            "step": 0.5,
            "unit": "rem",
            "label": "Heading Font Size",
            "default": 3
        }, 
        {
            "type": "range",
            "id": "heading_font_size_mobile",
            "min": 1,
            "max": 10,
            "step": 0.5,
            "unit": "rem",
            "label": "Mobile Heading Font Size",
            "default": 3
        }, 
      {
        "type": "color",
        "id": "color_heading",
        "label": "Heading Color",
        "default": "#ffffff"
      },
        {
          "type": "text",
          "id": "slide-tagline",
          "label": "Subheading"
        }, 
        {
            "type": "range",
            "id": "subheading_font_size",
            "min": 1,
            "max": 10,
            "step": 0.5,
            "unit": "rem",
            "label": "Subheading Font Size",
            "default": 2
        },
        {
            "type": "range",
            "id": "subheading_font_size_mobile",
            "min": 1,
            "max": 10,
            "step": 0.5,
            "unit": "rem",
            "label": "Mobile Subheading Font Size",
            "default": 2
        },
      {
        "type": "color",
        "id": "color_tagline",
        "label": "Tagline Color",
        "default": "#ffffff"
      },
        {
          "type": "url",
          "id": "slide-link-url",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "slide-link-title",
          "label": "Button label",
          "default": "Link to content"
        },
                {
            "type": "range",
            "id": "button_font_size_mobile",
            "min": 1,
            "max": 10,
            "step": 0.5,
            "unit": "rem",
            "label": "Mobile Button Font Size ",
            "default": 2
        },
                {
            "type": "range",
            "id": "button_font_size",
            "min": 1,
            "max": 10,
            "step": 0.5,
            "unit": "rem",
            "label": "Button Font Size",
            "default": 2
        },
      {
        "type": "color",
        "id": "color_link",
        "label": "Link Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_button",
        "label": "Button Color",
        "default": "#ffffff"
      }
      ],
    "presets": [{
      "name": "Video hero",
      "category": "Video"
    }]
  }
{% endschema %}

