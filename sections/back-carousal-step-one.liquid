                },
                "value": "medium"
              },
              {
                "label": {
                  "en": "Large"
                },
                "value": "large"
              }
            ]
          },
          {
            "type": "color",
            "id": "title-color",
            "label": {
              "en": "Step Title Color"
            },
            "default": "#0097ce"
        },
        {
            "type": "text",
            "id": "step-title",
            "label": {
              "en": "STEP 1 Title"
            },
            "default": {
              "en": "STEP 1"
            }
        },
        {
        "type": "select",
        "id": "question_text_size",
        "label": {
          "en": "Step Question Text size"
        },
        "default": "medium",
        "options": [
          {
            "label": {
              "en": "Medium"
            },
            "value": "medium"
          },
          {
            "label": {
              "en": "Large"
            },
            "value": "large"
          }
        ]
      },
      {
        "type": "color",
        "id": "question-color",
        "label": {
          "en": "Step Question Color"
        },
        "default": "#0097ce"
    },
    {
        "type": "text",
        "id": "question-title",
        "label": {
          "en": "STEP 1 Question"
        },
        "default": {
          "en": "What is your typical hygiene routine?"
        }
      }
    ]
}
{% endschema %}